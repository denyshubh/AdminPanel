extends layouts/_layout.pug

block variables
	- var activePage = 'form-samples'
	- var activeGroup = 'forms'

block title
	title Carssars Kitchen

block content
	.app-title
		div
			h1
				i.fa.fa-edit
				|  edit menu

		ul.app-breadcrumb.breadcrumb
			li.breadcrumb-item
				i.fa.fa-home.fa-lg
			li.breadcrumb-item
				| Menu
			li.breadcrumb-item
				a(href="#") Edit
		

	.row
		.col-md-6
			.tile
				h3.tile-title Edit Menu
				.tile-body
					form(action="/menu/edit/"+ menu._id, method="post", enctype="multipart/form-data")
						.form-group
							label.control-label Title
							input.form-control(type="text", value=menu.title, name="title")
						.form-group
							label.control-label Description
							input.form-control(type="text", value=menu.menu_desc, name="menu_desc")
						.form-group
							label.control-label Offer Percentage %
							input.form-control(type="text", value=menu.offer_percentage, name="offer_percentage")

						.form-group
							label.control-label Category
							select.form-control(name='category')
								each x in category
									option(value=x._id) #{x.title}
						.form-group
							label.control-label Price
							input.form-control(type="text", value=menu.price, name ="price")
						.form-group
							label.control-label Upload Image
							input.form-control(type="file",accept="image/*", name="img_url", value=menu.img_url)

						button.btn.btn-outline-success.mx-2(type='submit') SUBMIT
						a.btn.btn-outline-warning.mx-2(href='/menu/') Back
						a.btn.btn-outline-danger.mx-2(href='/menu/delete/'+menu._id) Delete
	
